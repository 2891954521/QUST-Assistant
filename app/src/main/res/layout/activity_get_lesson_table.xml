<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:navigationIcon="@drawable/ic_back"
        app:titleTextColor="@android:color/white"
        app:title="获取课表">

        <ImageView
            android:id="@+id/activity_get_lesson_table_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_margin="@dimen/widget_margin"
            android:padding="@dimen/widget_margin"
            android:src="@drawable/ic_done"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:padding="@dimen/widget_margin"
        android:gravity="center">

        <TextView
            style="@style/TextNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/widget_margin"
            android:text="学年"/>

        <NumberPicker
            android:id="@+id/activity_school_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/widget_margin"
            android:paddingEnd="@dimen/widget_margin"
            android:descendantFocusability="blocksDescendants" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/widget_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/widget_margin"
                    android:text="学期"/>

                <RadioGroup
                    android:id="@+id/activity_school_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/widget_margin">

                    <RadioButton
                        android:id="@+id/activity_school_term1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:padding="8dp"
                        android:text="1" />

                    <RadioButton
                        android:id="@+id/activity_school_term2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="2" />

                </RadioGroup>

            </LinearLayout>

            <Button
                android:id="@+id/activity_school_query"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查询"/>

        </LinearLayout>

    </LinearLayout>

    <com.university.assistant.widget.LessonTable
        android:id="@+id/activity_get_lesson_table_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>