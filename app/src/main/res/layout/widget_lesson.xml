<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/widget_lesson_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSecondaryText"
        android:padding="@dimen/widget_margin" />

    <ImageView
        android:id="@+id/widget_lesson_color"
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/widget_margin">

        <TextView
            style="@style/TextBig"
            android:id="@+id/widget_lesson_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:paddingBottom="@dimen/widget_margin"
            android:textColor="@color/colorPrimaryText"
            android:padding="0dp"
            android:text="空闲" />

        <TextView
            style="@style/TextSmall"
            android:id="@+id/widget_lesson_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:textColor="@color/colorSecondaryText"
            android:padding="0dp"/>

    </LinearLayout>

    <TextView
        style="@style/TextSmall"
        android:id="@+id/widget_lesson_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSecondaryText" />

</LinearLayout>

