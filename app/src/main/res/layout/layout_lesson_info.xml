<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_lesson_info_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#802C2C2C"
    android:layout_alignParentBottom="true">

    <com.university.assistant.widget.DialogRoundTop
        android:id="@+id/layout_lesson_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:focusable="true"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/layout_lesson_back"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:src="@drawable/ic_clear"
                android:padding="16dp"
                app:tint="@android:color/black" />

            <TextView
                style="@style/TextTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="课程详情"/>

            <ImageView
                android:id="@+id/layout_lesson_done"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:src="@drawable/ic_done"
                android:padding="16dp"
                app:tint="@android:color/black" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:background="@drawable/bg_round_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:padding="@dimen/base_margin">

                    <TextView
                        style="@style/TextNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/widget_margin"
                        android:text="名称" />

                    <EditText
                        android:id="@+id/layout_lesson_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="end"
                        android:padding="@dimen/widget_margin"
                        android:layout_marginEnd="@dimen/widget_margin"/>

                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bg_round_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="16dp"
                    android:padding="@dimen/base_margin">

                    <TextView
                        style="@style/TextNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/widget_margin"
                        android:text="教室"/>

                    <EditText
                        android:id="@+id/layout_lesson_place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="@dimen/widget_margin"
                        android:layout_marginEnd="@dimen/widget_margin"
                        android:gravity="end"/>

                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bg_round_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:padding="@dimen/base_margin">

                    <TextView
                        style="@style/TextNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/widget_margin"
                        android:text="教师"/>

                    <EditText
                        android:id="@+id/layout_lesson_teacher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="@dimen/widget_margin"
                        android:layout_marginEnd="@dimen/widget_margin"
                        android:gravity="end"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/widget_margin">

                    <TextView
                        style="@style/TextNormal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:text="上课周数"/>

                    <RadioGroup
                        android:id="@+id/layout_lesson_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/widget_margin">

                        <RadioButton
                            android:id="@+id/layout_lesson_every"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="全选" />

                        <RadioButton
                            android:id="@+id/layout_lesson_single"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="单周" />

                        <RadioButton
                            android:id="@+id/layout_lesson_double"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="双周" />

                    </RadioGroup>

                </LinearLayout>

                <com.university.assistant.widget.LessonTime
                    android:id="@+id/layout_lesson_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/widget_margin"/>


                <TextView
                    style="@style/TextNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/widget_margin"
                    android:text="颜色"/>

                <com.university.assistant.widget.ColorPicker
                    android:id="@+id/layout_lesson_color"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="@dimen/widget_margin"/>

            </LinearLayout>

        </ScrollView>

    </com.university.assistant.widget.DialogRoundTop>

</FrameLayout>
