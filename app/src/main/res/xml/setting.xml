<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="课表">

        <SwitchPreference
            android:key="key_show_all_lesson"
            android:defaultValue="false"
            android:title="显示全部课程"
            android:summaryOn="显示非本周课程"
            android:summaryOff="不显示非本周课程" />

        <SwitchPreference
            android:key="key_hide_finish_lesson"
            android:dependency="key_show_all_lesson"
            android:defaultValue="false"
            android:title="隐藏已结课程"
            android:summaryOn="隐藏已结课程"
            android:summaryOff="不隐藏已结课程"  />

        <Preference
            android:key="key_start_day"
            android:title="设置开学时间" />

       <Preference
            android:key="key_total_week"
            android:title="设置总周数"/>

        <Preference
            android:key="key_time_table"
            android:title="设置时间表"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="杂项">
    
        <Preference
            android:key="key_entrance_time"
            android:title="设置入学年份"/>
        
        <SwitchPreference
            android:key="key_quick_display_drink_code"
            android:title="主页下拉显示饮水码" />

        <SwitchPreference
            android:key="key_auto_update"
            android:defaultValue="true"
            android:summaryOn="3天检查一次更新"
            android:summaryOff="不检查更新"
            android:title="自动检查更新"/>

        <SwitchPreference
            android:key="key_update_dev"
            android:defaultValue="false"
            android:summaryOn="接收开发版更新"
            android:summaryOff="不接收开发版更新"
            android:title="接收开发版推送"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="其他">

        <Preference
            android:key="key_update"
            android:title="更新"/>

        <Preference
            android:key="key_about"
            android:title="关于"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="调试">

        <SwitchPreference
            android:key="key_debug"
            android:defaultValue="false"
            android:summaryOn="生成调试信息"
            android:summaryOff="不生成调试信息"
            android:title="调试模式"/>

        <Preference
            android:key="key_log"
            android:title="运行日志"/>

        <Preference
            android:key="key_clear_log"
            android:title="清除Log"/>

    </PreferenceCategory>

</PreferenceScreen>